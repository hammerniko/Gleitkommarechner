<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etKommazahl"
            tools:text="Kommazahl"/>
    <TextView
            android:text="Vorkommateil:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView2"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvVorkommateil"
            android:background="@color/teal_200"/>
    <TextView
            android:text="Vorkommateil Binaer:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView3"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:id="@+id/tvVorkommateilBinaer"/>
    <TextView
            android:text="Nachkommateil:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView4"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvNachkommateil"/>
    <TextView
            android:text="Nachkommateil Binaer:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView5"/>
    <TextView
            android:layout_width="match_parent"
            android:background="@color/teal_200"
            android:layout_height="wrap_content" android:id="@+id/tvNachkommateilBinaer"/>
    <TextView
            android:text="Festkommazahl:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView6"/>
    <TextView
            android:layout_width="match_parent"
            android:background="@color/teal_200"
            android:layout_height="wrap_content" android:id="@+id/tvFestkommazahl"/>
    <TextView
            android:text="Festkommazahl normiert:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView7"/>
    <TextView
            android:layout_width="match_parent"
            android:background="@color/teal_200"
            android:layout_height="wrap_content" android:id="@+id/tvFestkommazahlNormiert"/>

    <TextView
            android:text="Excess:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView8"/>
    <TextView
            android:layout_width="match_parent"
            android:background="@color/teal_200"
            android:layout_height="wrap_content" android:id="@+id/tvExcess"/>

    <TextView
            android:text="Exponent Binaer:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView9"/>
    <TextView
            android:layout_width="match_parent"
            android:background="@color/teal_200"
            android:layout_height="wrap_content" android:id="@+id/tvExPBin"/>

    <TextView
            android:text="Gleitkommazahl:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView10"/>
    <TextView
            android:layout_width="match_parent"
            android:background="@color/purple_200"
            android:layout_height="wrap_content" android:id="@+id/tvGleitkommazahl"/>



    <Button
            android:text="Berechne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btBerechne"/>
</LinearLayout>